<% layout('layouts/BOILERPLATE') %>

    <h1>ALL Campgrounds</h1>
    <a href="/campgrounds/new">Add Campground</a>
    <ul>
        <% for( let camp of campgrounds) { %>
            <div class="card mb-3" style="max-height:20em ">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= camp.image %>" alt="myimage">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>
                            </p>
                            <p class="card-text">
                                <%= camp.description %>
                            </p>

                            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %> ">More Details</a>

                        </div>
                    </div>
                </div>
            </div>



            <% } %>

    </ul>